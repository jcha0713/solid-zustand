{
  "name": "solid-zustand",
  "description": "🐻 State management in Solid using zustand.",
  "keywords": [
    "solid",
    "state",
    "management",
    "store",
    "zustand"
  ],
  "license": "MIT",
  "version": "1.2.3",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm",
    "build": "pnpm run build-fast -- --dts-resolve",
    "test": "vitest run",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.1",
    "bumpp": "^7.1.1",
    "eslint": "^8.10.0",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.5",
    "simple-git-hooks": "^2.7.0",
    "tsup": "^5.11.13",
    "typescript": "4.5.4",
    "vite-plugin-solid": "^2.2.5",
    "vitest": "^0.5.9"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wobsoriano/solid-zustand.git"
  },
  "peerDependencies": {
    "zustand": "^3.6.0"
  },
  "dependencies": {
    "solid-js": "^1.3.10",
    "zustand": "^3.7.1"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "eslintIgnore": [
    "dist"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  }
}
